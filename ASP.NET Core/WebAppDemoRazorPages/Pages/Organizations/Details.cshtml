@page
@model WebAppDemoRazorPages.Pages.Organizations.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Organization</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Organization.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Organization.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Organization.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Organization.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Organization.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Organization.Created)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="/OrganizationsUsers/CreateEdit" asp-route-OrganizationId="@Model.Organization.Id">Create New User</a>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrganizationUsers[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrganizationUsers[0].Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrganizationUsers[0].AccessLevel)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrganizationUsers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayNameFor(model => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccessLevel)
                    </td>

                    <td>
                        <a asp-page="/OrganizationsUsers/CreateEdit" asp-route-UserId="@item.Id" asp-route-OrganizationId="@Model.Organization.Id" asp-route-edit="@true">Edit</a> |
                        <a asp-page="/OrganizationsUsers/Details" asp-route-UserId="@item.Id" asp-route-OrganizationId="@Model.Organization.Id">Details</a> |
                        <a asp-page="/OrganizationsUsers/Delete" asp-route-UserId="@item.Id" asp-route-OrganizationId="@Model.Organization.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Organization?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
